<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" href="/images/favicon.ico">
		<title>Cassadó S.A.</title>
		<link rel="stylesheet" href="/css/index.css" type="text/css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</head>

	<body>
		<!-- Barra de navegación -->
		<%- include('navbar') %>
		
		<!-- Contenido -->
		<div class="container mt-2 mb-3">
			<div class="row">
				<div class="col-11">
					<h1>Pedidos</h1>
				</div>
			</div>

			<table class="table table-hover text-center">
				<thead>
					<tr>
						<th scope="col">Nro de pedido</th>
						<th scope="col">Nro cotizacion</th>
						<th scope="col">Nro documento cliente</th>
						<th scope="col">ID Vendedor</th>
						<th scope="col">Fecha de emision</th>
						<th scope="col">Fecha de vencimiento</th>
						<th scope="col">Estado</th>
						<th scope="col">Monto total</th>
					</tr>
				</thead>

				<tbody>
					<% pedidos.forEach(pedido => { %>
						<tr class="align-middle">
							<td><%= pedido.num_pedido %></td>
							<td><%= pedido.num_cot %></td>
							<td><%= pedido.num_doc %></td>
							<td><%= pedido.id_ven %></td>
							<td><%= pedido.fecha_emi.toISOString().substring(0,10) %></td>
							<td><%= pedido.fecha_ven.toISOString().substring(0,10) %></td>
							<% if (pedido.estado == 0) { %>
								<td>En proceso</td>
							<% } else { %>
								<td>Finalizado</td>
							<% } %>
							<td>US$ <%= pedido.total %></td>
						</tr>
					<% }) %>
				</tbody>
			</table>
		</div>

		<!-- Footer -->
		<%- include('footer') %> 
	</body>
</html>