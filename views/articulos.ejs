<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" href="/images/favicon.ico">
		<title>Cassadó S.A.</title>
		<link rel="stylesheet" href="/css/index.css" type="text/css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</head>

	<body>
		<!-- Barra de navegación -->
		<%- include('navbar') %>
		
		<!-- Contenido -->
		<div class="container mt-2 mb-3">
			<div class="row">
				<div class="col-4 align-self-center">
					<h1>Articulos</h1>
				</div>

				<div class="col-3 align-self-center">
					<a class="btn btn-outline-dark" href="/articulos">Mostrar todo</a>
				</div>

				<div class="col-4 align-self-center">
					<form method="post" action="/articulos/buscar">
						<div class="row">
							<div class="col-11">
								<input name="busqueda" type="text" class="form-control" placeholder="Buscar por ID de articulo"/>
							</div>
							
							<div class="col-1">
								<button type="submit" class="btn btn-outline-success">Buscar</button>
							</div>
						</div>
					</form>
				</div>
			</div>

			<table class="table table-hover text-center">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Descripción</th>
						<th scope="col">Origen</th>
						<th scope="col">Precio unitario</th>
						<th scope="col">Stock</th>
						<th scope="col">ID Almacen</th>
					</tr>
				</thead>

				<tbody>
					<% articulos.forEach(articulo => { %>
						<tr>
							<td><%= articulo.id_art %></td>
							<td><%= articulo.descripcion %></td>
							<% if (articulo.cod_origen == 1) { %>
								<td>Nacional</td>
							<% } else { %>
								<td>Extranjero</td>
							<% } %>
							<td>US$ <%= articulo.precio_unit %></td>
							<td><%= articulo.stock %></td>
							<td><%= articulo.id_alm %></td>
						</tr>
					<% }) %>
				</tbody>
			</table>
		</div>

		<!-- Footer -->
		<%- include('footer') %>
	</body>
</html>