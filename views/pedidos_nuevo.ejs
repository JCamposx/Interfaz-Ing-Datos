<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" href="/images/favicon.ico">
		<title>Cassadó S.A.</title>
		<link rel="stylesheet" href="/css/index.css" type="text/css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</head>

	<body>
		<!-- Barra de navegación -->
		<%- include('navbar') %>
		
		<!-- Contenido -->
		<div class="container mt-2 mb-3">
			<h1>Nuevo pedido N°<%= num_pedido %></h1>

			<form method="post" action="/crear-nuevo-pedido">
				<input type="hidden" name="num_pedido" value="<%= num_pedido %>">
				<input type="hidden" name="id_cot" value="<%= id_cot %>">

				<div class="row mb-3">
					<div class="col">
						<label class="form-label">Fecha de emision</label>
						<input name="fecha_emi" type="date" class="form-control" required/>
					</div>
				
					<div class="col">
						<label class="form-label">Fecha de vencimiento</label>
						<input name="fecha_ven" type="date" class="form-control" required/>
					</div>
				</div>
				
				<div class="row mb-4">
					<div class="col">
						<label class="form-label">Estado</label>
						<select name="estado" class="form-select">
							<option value="0">En proceso</option>
							<option value="1">Finalizado</option>
						</select>
					</div>
					
					<div class="col">
						<label class="form-label">ID Vendedor</label>
						<input name="id_vendedor" type="text" class="form-control" required/>
					</div>
					
					<div class="col">
						<label class="form-label">Monto total (US$)</label>
						<input value="<%= total %>" type="text" class="form-control" disabled/>
						<input type="hidden" name="monto_total" value="<%= total %>">
					</div>
				</div>
				
				<hr>
				
				<div class="mb-3">
					<div class="mb-3">
						<h3>Lista de vendedores</h3>
					</div>
				
					<div>
						<table class="table table-hover text-center">
							<thead>
								<tr>
									<th scope="col">ID</th>
									<th scope="col">Nombre</th>
									<th scope="col">Apellido</th>
									<th scope="col">Correo</th>
									<th scope="col">Teléfono</th>
									<th scope="col">Fecha de ingreso</th>
								</tr>
							</thead>
				
							<tbody>
								<% vendedores.forEach(vendedor => { %>
									<tr class="align-middle">
										<td><%= vendedor.id_ven %></td>
										<td><%= vendedor.nombre %></td>
										<td><%= vendedor.apellido %></td>
										<td><%= vendedor.correo %></td>
										<td><%= vendedor.telefono %></td>
										<td><%= vendedor.fecha_ingreso %></td>
									</tr>
								<% }) %>
							</tbody>
						</table>
					</div>
				</div>
				
				<div class="text-center">
					<button type="submit" href="/crear-nuevo-pedido" class="mt-3 btn btn-success">Confirmar</button>
					<a href="/cotizaciones" class="ms-3 mt-3 btn btn-outline-dark">Cancelar</a>
				</div>
			</form>
		</div>

		<!-- Footer -->
		<%- include('footer') %> 
	</body>
</html>